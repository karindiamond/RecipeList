<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/prep_time_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Prep Time:"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prep_hours_edit_text"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-1dp"
        android:ems="10"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prep_time_header" />

    <TextView
        android:id="@+id/prep_hours_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hour(s)"
        app:layout_constraintLeft_toRightOf="@+id/prep_hours_edit_text"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/prep_time_header" />

    <EditText
        android:id="@+id/prep_minutes_edit_text"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintLeft_toRightOf="@+id/prep_hours_text"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/prep_time_header" />

    <TextView
        android:id="@+id/prep_minutes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minutes(s)"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/prep_time_header"
        app:layout_constraintLeft_toRightOf="@+id/prep_minutes_edit_text"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/cook_time_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="Cook Time:"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prep_hours_edit_text" />

    <EditText
        android:id="@+id/cook_hours_edit_text"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-1dp"
        android:ems="10"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cook_time_header" />

    <TextView
        android:id="@+id/cook_hours_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hour(s)"
        app:layout_constraintLeft_toRightOf="@+id/cook_hours_edit_text"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cook_time_header" />

    <EditText
        android:id="@+id/cook_minutes_edit_text"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintLeft_toRightOf="@+id/cook_hours_text"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/cook_time_header" />

    <TextView
        android:id="@+id/cook_minutes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minutes(s)"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cook_time_header"
        app:layout_constraintLeft_toRightOf="@+id/cook_minutes_edit_text"
        android:layout_marginStart="0dp" />

</android.support.constraint.ConstraintLayout>